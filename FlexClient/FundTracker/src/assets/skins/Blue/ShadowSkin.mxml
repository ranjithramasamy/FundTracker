<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/halo">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<s:Rect radiusY="24" 
			radiusX="24"
			x="0"
			y="0"
			width="{this.width}"
			height="{this.height}"
		>
		<s:filters>
			<s:DropShadowFilter inner="true"
								distance="0"   
								strength="1"/>
		</s:filters>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x0f2835"/>
				<s:GradientEntry color="0x153445"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Rect radiusY="24"
			radiusX="24"
			x="0"
			y="0"  alpha="0.8"
			width="{this.width}"
			height="{this.height}" >
		<s:stroke>
			<s:LinearGradientStroke rotation="90"
									 weight="2" 
									 pixelHinting="true">
				<s:GradientEntry color="0x102a39"/>
				<s:GradientEntry color="0x20516c"/>
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
</s:Group>
